					"fullRow": true
				},
				{
					"fieldLabel": "First Name",
					"fieldName": "firstName",
					"fieldRequired": true,
					"fieldType": "text"
				},
				{
					"fieldLabel": "Last Name",
					"fieldName": "surname",
