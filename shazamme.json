					"fieldRequired": true,
					"fieldType": "file",
					"showOnAuth": true
				},
				{
					"fieldLabel": "Cover Letter",
					"fieldName": "coverLetter",
					"fieldType": "file",
					"showOnAuth": true
				},
				{
					"fieldName": "separator",
