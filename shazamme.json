	"trace": {
		"application-form": {
			"warn": [
				{
					"useSingleJob": true
				}
			],

			"error": [
			],

			"trace": [
			]
		}
	},

	"run": {
		"job-results": [
			"$(window).on('scroll', function() { $('[data-widget-id={{widgetId}}]').attr('style', 'height: auto !important; visibility: visible !important'); } );"
		]
	}
