					"fieldType": "text",
					"fullRow": true
				},
				{
					"fieldLabel": "Phone Number",
					"fieldName": "phone",
					"fieldRequired": true,
					"fieldType": "text",
					"fullRow": true
				},
				{
					"fieldName": "separator"
				},
				{
					"fieldLabel": "Resume",
