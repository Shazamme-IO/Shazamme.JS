		},

		"login-dialog": {
			"fieldList": [
				{
					"fieldLabel": "Email:",
					"fieldName": "uid",
					"fullRow": true
				},
				{
					"fieldLabel": "Password:",
					"fieldName": "secret",
					"fullRow": true
				},
				{
					"fieldLabel": "Forgot password?",
					"fieldName": "button",
					"fullRow": true,
					"buttonLink": "/forgot-password"
				},
				{
					"fieldLabel": "Read our privacy policy",
					"fieldName": "button",
					"fullRow": true,
					"buttonLink": "/privacy-policy"
				}
			]
		}
